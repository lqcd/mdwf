	  "/* $Id$ */"])

(verbose [(c99 bgl/xlc dry) "#include <complex.h>"])
(verbose [(c99 bgl/xlc dry) "#include <mdwf.h>"])
(verbose [(c99 bgl/xlc dry) "struct ABTable;"])
(verbose [(c99 bgl/xlc dry) "struct Fermion;"])
(verbose [(c99 bgl/xlc dry) "struct SUn;"])
(verbose [(c99 bgl/xlc dry) "struct neighbor;"])
(verbose [(c99 bgl/xlc dry) "struct ABTable;"])
(verbose [(c99 bgl/xlc dry) "struct AiTable;"])
(verbose [(c99 bgl/xlc dry) "struct Fermion;"])
(verbose [(c99 bgl/xlc dry) "struct ProjectedFermion;"])
(verbose [(c99 bgl/xlc dry) "struct SUn;"])
(verbose [(c99 bgl/xlc dry) "struct down_pack;"])
(verbose [(c99 bgl/xlc dry) "struct neighbor;"])
(verbose [(c99 bgl/xlc dry) "struct up_pack;"])

(structure down-pack "down_pack" ([fermion "fermion" int]))

(structure up-pack   "up_pack"   ([fermion "fermion" int]
	                          [gauge   "gauge"   int]))

(structure AB-Table  "ABTable"   ([hi-index "h_index" int    ]
	                          [lo-index "l_index" int    ]
                                  [c-value  "c_val"   double ]
 				  [lo-value "l_val"   double ]
				  [hi-value "h_val"   double ]))

(structure abc "x_abc"          ([a  "a"  double]
	       			 [b  "b"  double]
				 [c  "c"  double]))

(structure AB-Inverse "AiTable" ([z     "z"   double]
	                         [abc   "abc" abc   ]))  ;; careful with sizeof

(array d-vector "x_vector" int (const *dim*))

(structure neighbor  "neighbor"  ([mask     "mask"    int      ]
	   	     		  [up-u     "up_u"    int      ]
	                          [up-f     "up_f"    d-vector ]
                                  [down-f   "down_f"  d-vector ]
				  [down-u   "down_u"  d-vector ]))
